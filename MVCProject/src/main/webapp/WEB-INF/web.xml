<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>MVCProject</display-name>

	<jsp-config>
		<taglib>
			<taglib-uri>http://min.com</taglib-uri>
			<taglib-location>/Tag/custom.tld</taglib-location>
		</taglib>
	</jsp-config>

	<error-page>
		<error-code>404</error-code>
		<location>/error/exception_404.jsp</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error/exception_405.jsp</location>
	</error-page>

	<error-page>
		<error-code>405</error-code>
		<location>/error/exception_405.jsp</location>
	</error-page>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>ji.dept.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>ji.dept.frontcontroller.DeptDispatcherServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>